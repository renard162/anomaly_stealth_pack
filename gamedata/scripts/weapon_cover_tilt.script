function getBestMatch(sec)
	local best_match, best_match_l = nil, 0
	local function getMatch(k, s1, s2)
		local a, b = s1:find(s2)
		if a and b then
			local l = b - a + 1
			if l > best_match_l then
				best_match = k
				best_match_l = l
			end
		end
	end
	for k, v in pairs(wpn_radii) do
		getMatch(k, sec, k)
		-- getMatch(k, k, sec)
	end
	return best_match
end

